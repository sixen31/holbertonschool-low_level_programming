#include <stdlib.h>
/**
 * malloc_checked - allocate memory using malloc
 * @b: size of memory to allocate
 *
 * Return: a pointer to the allocated memory, or exit with status 98 if malloc fails
 */
void *malloc_checked(unsigned int b)
{
void *ptr = malloc(b);

if (ptr == NULL)
exit(98);

return (ptr);
}
